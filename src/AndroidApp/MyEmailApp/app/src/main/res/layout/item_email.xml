<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Email Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timestamp"
                android:textSize="12sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- Subject -->
        <TextView
            android:id="@+id/text_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Subject"
            android:textStyle="bold"
            android:textSize="14sp" />

        <!-- Body Preview -->
        <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Body"
            android:textSize="12sp"
            android:textColor="#666"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Labels -->
        <TextView
            android:id="@+id/text_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Labels"
            android:textSize="10sp"
            android:textColor="#999"
            android:visibility="visible" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/button_mark_read"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="📩"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="4dp"
                android:layout_marginEnd="4dp"
                style="?android:attr/buttonStyleSmall" />

            <Button
                android:id="@+id/button_mark_unread"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="✉️"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="4dp"
                android:layout_marginEnd="4dp"
                style="?android:attr/buttonStyleSmall" />
            <Button
                android:id="@+id/button_restore"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="↩️"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="4dp"
                android:layout_marginEnd="4dp"
                style="?android:attr/buttonStyleSmall" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🗑️"
                android:textSize="12sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="4dp"
                style="?android:attr/buttonStyleSmall" />
            <Button
                android:id="@+id/button_labels"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🏷️"
                android:minWidth="0dp"
                android:padding="4dp"
                style="?android:attr/buttonStyleSmall" />

            <Button
                android:id="@+id/button_spam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Spam"
                android:visibility="gone" /> <!-- default hidden -->


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>